#!/bin/bash
# Main Opentox-ruby install script
# Author: Christoph Helma, Andreas Maunz

echo "Opentox-ruby installation"
echo "Press <Enter> to continue..."
read

source "./config"
source "./base-install.sh"
source "./ruby.sh"
source "./openbabel.sh"
source "./kernlab.sh"
source "./opentox-ruby.sh"

if [ $install != "gem" ]
then
    source "./nginx.sh"
    source "./redis.sh"
    source "./opentox-webservices.sh"
fi

